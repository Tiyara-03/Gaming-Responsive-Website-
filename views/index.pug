doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Responsive Gaming Website
    // custom css link 
    //-link(rel="stylesheet", href="../static/style.css")
    style 
      include ../static/style.css
    // Boxicons link 
    link(rel="stylesheet", href="https://unpkg.com/boxicons@latest/css/boxicons.min.css")
    // remixicons links
    link(href="https://cdn.jsdelivr.net/npm/remixicon@4.1.0/fonts/remixicon.css", rel="stylesheet")
    // google font link 
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;0,400;0,500;0,600;0,800;1,700&display=swap")

  body
    header
      a.logo(href="#") COC-STATS
      ul.navlist#navlist
        li: a(href="#") Home
        li: a(href="#") About
        li: a(href="#") Clans
        li: a(href="#") Town hall
        li: a(href="#") Troops
        li: a(href="#") Contact
      //- here toggleide onclick is option with the onclick it is working as well
      div.bx.bx-menu#menu-icon(onclick="togglehide()") 
    section.hero
      div.hero-text
        h5 #2 trending
        h4 Lead Supercell
        h1 GOBLINS
        p Join millions of players worldwide as you build your village, rasie a clan, compete in epic Clan Wars!!
        a(href="#") Compare
        a.ctaa(href="#") 
          i.ri-play-fill
          | Watch GamePlay
      div.hero-img
        img(src="../static/undraw_video_game_night_8h8m.svg", alt="Not availabe")
    div.icons
          <a href=""><i class="ri-instagram-line"></i></a>
          <a href=""><i class="ri-youtube-line"></i></a>
          <a href=""><i class="ri-dribbble-line"></i></a>

    
    div.scroll-down
        <a href="#"><i class="ri-arrow-down-s-fill"></i></a>
    
    // scroll reveal effect
    script(src="https://unpkg.com/scrollreveal")

    // custom js link
    script(src="../static/index.js")
